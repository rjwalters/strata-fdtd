{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FDTD Simulator",
  "version": "0.1.0",
  "identifier": "com.fdtd.simulator",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "FDTD Simulator",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "devtools": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' http://localhost:1420 ws://localhost:1420 https://github.com https://api.github.com https://*.githubusercontent.com; worker-src 'self' blob:; font-src 'self' data:"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/rjwalters/strata-fdtd/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
